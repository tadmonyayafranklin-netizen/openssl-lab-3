[ req ]
default_bits       = 2048
prompt             = no
default_md         = sha256
req_extensions     = req_ext
distinguished_name = dn

[ dn ]
C  = CM
ST = Centre
L  = Yaounde
O  = My Company
CN = myserver.local

[ req_ext ]
subjectAltName = @alt_names

[ alt_names ]
DNS.1 = myserver.local
DNS.2 = localhost
IP.1  = 127.0.0.1

